<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.roll.mapper.StudentMapper">

    <resultMap id="BaseResultMap" type="com.system.roll.entity.pojo.Student">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="studentName" column="student_name" jdbcType="VARCHAR"/>
        <result property="departmentId" column="department_id" jdbcType="VARCHAR"/>
        <result property="majorId" column="major_id" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="INTEGER"/>
        <result property="classNo" column="class_no" jdbcType="INTEGER"/>
        <result property="openId" column="open_id" jdbcType="VARCHAR"/>
    </resultMap>

    <select id="selectListByCourseId" resultMap="BaseResultMap">
        select stu.id,stu.student_name  from course_relation cr left join student stu on cr.student_id = stu.id where cr.course_id = #{courseId};
    </select>
</mapper>
