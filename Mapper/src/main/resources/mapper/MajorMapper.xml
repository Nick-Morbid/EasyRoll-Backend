<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.roll.mapper.MajorMapper">

    <resultMap id="BaseResultMap" type="com.system.roll.entity.pojo.Major">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="majorName" column="major_name" jdbcType="VARCHAR"/>
    </resultMap>
    <select id="selectListByNameLike" resultType="java.lang.String">
        select DISTINCT major_name from major
        <where>
            <if test="majorName!=''">
                major_name like '%' #{majorName} '%'
            </if>
        </where>;
    </select>
    <select id="selectIdByName" resultType="java.lang.String">
        select id from major where major_name = #{majorName};
    </select>
    <select id="selectNameById" resultType="java.lang.String">
        select major_name from major where id = #{majorId};
    </select>

</mapper>
