<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.system.roll.mapper.DepartmentMapper">

    <resultMap id="BaseResultMap" type="com.system.roll.entity.pojo.Department">
        <id property="id" column="id" jdbcType="VARCHAR"/>
        <result property="departmentName" column="department_name" jdbcType="VARCHAR"/>
        <result property="grade" column="grade" jdbcType="INTEGER"/>
    </resultMap>
    <select id="selectListByNameLike" resultType="String">
        select DISTINCT department_name from department
        <where>
            <if test="departmentName!=''">
                department_name like '%' #{departmentName} '%'
            </if>
        </where>;
    </select>
    <select id="selectIdByNameAndGrade" resultType="java.lang.String">
        select id from department where department_name  = #{departmentName} and grade = #{grade};
    </select>

</mapper>
